<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorLightGray</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

    </style>

    <style name="TextViewRegularDarkGraySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <style name="TextViewRegularBlackMediumSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_medium_small</item>
    </style>


    <style name="TabLayoutText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonPrimaryRoundedExtra">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_fill_primary_rounded_ripple</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium_small</item>
    </style>


</resources>
